@model CardHeaderTye

<span class="card-title float-right "><span><spna class="@ViewBag.Icon"></spna></span> @ViewData["title"]</span>

<div class="row float-left ">
    <div class="card-tools float-left ">
        <div class="float-left">
            @{
                switch(Model)
                {
                    case CardHeaderTye.Index:
                        <a class="btn btn-tool btn-default ml-2 " data-toggle="tooltip" title="صفحه قبلی" href="#" onClick="history.go(-1); return false;">
                            <i class="fas fa-angle-right"></i>
                        </a>
                        <a class="btn btn-tool " data-toggle="tooltip" title="@Resource.Add" asp-area="@ViewContext.RouteData.Values["area"]" asp-controller="@ViewContext.RouteData.Values["controller"]" asp-action="Create" asp-route-id="@TempData["ParentId"]">
                            <i class="fas fa-plus "></i>
                        </a>
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas   fa-eye"></i>
                        </button>
                        <a class="btn btn-tool  btn-default " data-toggle="tooltip" title="صفحه بعدی" href="#" onClick="history.go(+1); return false;">
                            <i class="fas fa-angle-left"></i>
                        </a>
                        break;

                    case CardHeaderTye.Edit:
                    case CardHeaderTye.Create:
                        <a class="btn btn-tool btn-default ml-2 " data-toggle="tooltip" title="صفحه قبلی" href="#" onClick="history.go(-1); return false;">
                            <i class="fas fa-angle-right"></i>
                        </a>
                        <a class="btn btn-tool" data-toggle="tooltip" title="مشاهده لیست" asp-area="@ViewContext.RouteData.Values["area"]" asp-controller="@ViewContext.RouteData.Values["controller"]" asp-action="Index" asp-route-id="@TempData["ParentId"]">
                            <i class="fas fa-list"></i>
                        </a>
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas   fa-eye"></i>
                        </button>
                        <a class="btn btn-tool  btn-default " data-toggle="tooltip" title="صفحه بعدی" href="#" onClick="history.go(+1); return false;">
                            <i class="fas fa-angle-left"></i>
                        </a>
                        break;

                    case CardHeaderTye.Search:
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas   fa-eye"></i>
                        </button>

                        break;

                    case CardHeaderTye.All:
                        <a class="btn btn-tool btn-default ml-2 " data-toggle="tooltip" title="صفحه قبلی" href="#" onClick="history.go(-1); return false;">
                            <i class="fas fa-angle-right"></i>
                        </a>
                        <a class="btn btn-tool " data-toggle="tooltip" title="@Resource.Add" asp-area="@ViewContext.RouteData.Values["area"]" asp-controller="@ViewContext.RouteData.Values["controller"]" asp-action="Create" asp-route-id="@TempData["ParentId"]">
                            <i class="fas fa-plus"></i>
                        </a>
                        <a class="btn btn-tool" data-toggle="tooltip" title="مشاهده لیست" asp-area="@ViewContext.RouteData.Values["area"]" asp-controller="@ViewContext.RouteData.Values["controller"]" asp-action="Index" asp-route-id="@TempData["ParentId"]">
                            <i class="fas fa-list"></i>
                        </a>
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas   fa-eye"></i>
                        </button>
                        <a class="btn btn-tool  btn-default " data-toggle="tooltip" title="صفحه بعدی" href="#" onClick="history.go(+1); return false;">
                            <i class="fas fa-angle-left"></i>
                        </a>
                        break;
                    default:
                        <a class="btn btn-tool btn-default ml-2 " data-toggle="tooltip" title="صفحه قبلی" href="#" onClick="history.go(-1); return false;">
                            <i class="fas fa-angle-right"></i>
                        </a>
                        <a class="btn btn-tool " data-toggle="tooltip" title="@Resource.Add" asp-area="@ViewContext.RouteData.Values["area"]" asp-controller="@ViewContext.RouteData.Values["controller"]" asp-action="Create" asp-route-id="@TempData["ParentId"]">
                            <i class="fas fa-plus"></i>
                        </a>
                        <a class="btn btn-tool" data-toggle="tooltip" title="مشاهده لیست" asp-area="@ViewContext.RouteData.Values["area"]" asp-controller="@ViewContext.RouteData.Values["controller"]" asp-action="Index" asp-route-id="@TempData["ParentId"]">
                            <i class="fas fa-list"></i>
                        </a>
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas   fa-eye"></i>
                        </button>
                        <a class="btn btn-tool  btn-default " data-toggle="tooltip" title="صفحه بعدی" href="#" onClick="history.go(+1); return false;">
                            <i class="fas fa-angle-left"></i>
                        </a>
                        break;
                }
            }
        </div>
    </div>
</div>