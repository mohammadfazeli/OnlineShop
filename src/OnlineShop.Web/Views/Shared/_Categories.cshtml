@model List<OnlineShop.ViewModels.Area.Base.categories.CategoryGeneralDto>

<div class="categories_wrap">
    <button type="button" data-toggle="collapse" data-target="#navCatContent" aria-expanded="false" class="categories_btn">
        <i class="linearicons-menu"></i><span>همه دسته بندی ها </span>
    </button>
    <div id="navCatContent" class="navbar collapse">
        <ul>
            @{
                foreach(var categories in Model.Where(x => x.SubCategories.Any()))
                {
                    <li class="dropdown dropdown-mega-menu">
                        <a class="dropdown-item nav-link dropdown-toggler"
                           href="#" data-toggle="dropdown">
                            <i class="flaticon-woman"></i> <span>@categories.Name</span>
                        </a>
                        <div class="dropdown-menu shadow bg-light">
                            <ul class="mega-menu d-lg-flex">
                                <li class="mega-menu-col col-lg-7">
                                    <ul class="d-lg-flex">
                                        @{
                                            foreach(var parentCategories in categories.SubCategories)
                                            {
                                                <li class="mega-menu-col col-lg-6">
                                                    <ul>
                                                        <li class="dropdown-header">

                                                            <a class="dropdown-item nav-link nav_item"
                                                               href="  @Url.Action("Categories","CategoryGroup",new { id = parentCategories.id , CategoryName = parentCategories.Name.Replace(" ","_") })">
                                                                @parentCategories.Name
                                                            </a>
                                                        </li>
                                                        @foreach(var subCategory in parentCategories.SubCategories)
                                                        {
                                                            <li>
                                                                <a class="dropdown-item nav-link nav_item"
                                                                   href="  @Url.Action("Categories","CategoryGroup",new { id = subCategory.id , CategoryName = subCategory.Name.Replace(" ","_") })">
                                                                    @subCategory.Name
                                                                </a>
                                                            </li>
                                                        }
                                                    </ul>
                                                </li>
                                            }
                                        }
                                    </ul>
                                </li>
                                <li class="mega-menu-col col-lg-5">
                                    <div class="header-banner2">
                                        <img src="/layout/assets/images/menu_banner1.jpg" alt="menu_banner1">
                                        <div class="banne_info">
                                            <h6>%10 تخفیف</h6>
                                            <h4>محصولات جدید</h4>
                                            <a href="#">اکنون خرید کنید</a>
                                        </div>
                                    </div>
                                    <div class="header-banner2">
                                        <img src="/layout/assets/images/menu_banner2.jpg" alt="menu_banner2">
                                        <div class="banne_info">
                                            <h6>%15 تخفیف</h6>
                                            <h4>مد مردانه</h4>
                                            <a href="#">اکنون خرید کنید</a>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </li>

                }
            }
            @{
                foreach(var categories in Model.Where(x => x.SubCategories.Any()))
                {
                    <li><a class="dropdown-item nav-link nav_item" href="coming-soon.html"><i class="flaticon-jacket"></i> <span>@categories.Name</span></a></li>

                }

            }

            @*<li>
                    <ul class="more_slide_open">
                        <li><a class="dropdown-item nav-link nav_item" href="login.html"><i class="flaticon-pijamas"></i> <span>لباس خواب</span></a></li>
                        <li><a class="dropdown-item nav-link nav_item" href="register.html"><i class="flaticon-scarf"></i> <span>زمستونی</span></a></li>
                        <li><a class="dropdown-item nav-link nav_item" href="404.html"><i class="flaticon-vintage"></i> <span>لباس محلی</span></a></li>
                        <li><a class="dropdown-item nav-link nav_item" href="coming-soon.html"><i class="flaticon-pregnant"></i> <span>لباس کودک</span></a></li>
                    </ul>
                </li>*@
        </ul>
        @*<div class="more_categories">دسته بندی های بیشتر</div>*@
    </div>
</div>