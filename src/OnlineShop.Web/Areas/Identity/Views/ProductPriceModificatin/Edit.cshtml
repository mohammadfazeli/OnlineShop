@model OnlineShop.ViewModels.Area.Base.ProductPriceModificatin.ProductPriceModificatinDto

<partial name="_CustomValidationSummary" />
@{
    TempData["ParentId"] = Model.ProductDetailId;
}

<form asp-action="Edit" method="post">
    <div class="card ">
        @Html.HiddenFor(r => r.Id)
        @Html.HiddenFor(r => r.ProductDetailId)
        <div class="card-header">
            <partial name="_CardHeader" model="OnlineShop.Common.Enum.CardHeaderTye.Edit" />
        </div>
        <div class="card-body">
            <div class="row">

                <div class="col-md-4 col-lg-4 col-sm-12  col-xl-4">

                    <CustomInput asp-for="OldPrice" asp-Class="price" asp-Format="@Model.NewPrice.ToString("0.##")"></CustomInput>
                </div>
                <div class="col-md-4 col-lg-4 col-sm-12  col-xl-4">

                    <CustomInput asp-for="NewPrice" asp-Class="price" asp-Format="@Model.NewPrice.ToString("0.##")"></CustomInput>
                </div>
                <div class="col-md-4 col-lg-4 col-sm-12  col-xl-4 che">

                    <CustomInput asp-for="FromDate" asp-Class="persianDatepicker " asp-Format="@Model.FromDate.ToShortPersianDateString()" ></CustomInput>
                </div>

                <div class="col-md-4 col-lg-4 col-sm-12  col-xl-4">

                    <CustomCheckBox asp-for="InActive" asp-IsChecked="Model.InActive">  </CustomCheckBox>
                </div>
            </div>
        </div>
        <partial name="_CardFooter">
    </div>
</form>