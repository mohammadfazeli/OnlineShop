@model OnlineShop.ViewModels.Area.Base.Colors.ColorstDto
<partial name="_CustomValidationSummary" />

<form asp-action="Edit" method="post">
    <div class="card ">
        @Html.HiddenFor(r => r.Id)
        <div class="card-header">
            <partial name="_CardHeader" model="OnlineShop.Common.Enum.CardHeaderTye.Edit" />
        </div>
        <div class="card-body">
            <div class="row">

                <div class="col-md-4 col-lg-4 col-sm-12  col-xl-4">
                    <div class="form-group">
                        <label asp-for="Name" class=" col-form-label text-md-left"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4 col-lg-4 col-sm-12  col-xl-4">

                    <div class="form-group">
                        <div id="colorpicker">
                            <label asp-for="UserCode" class=" col-form-label text-md-left"></label>
                            <div class="input-group my-colorpicker2 colorpicker-element">
                                <input asp-for="UserCode" type="text" class="form-control input-lg" />
                                <span class="input-group-append">
                                    <span class="input-group-text colorpicker-input-addon"><i></i></span>
                                </span>
                                <span asp-validation-for="UserCode" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 col-lg-4 col-sm-12  col-xl-4">
                    <div class="form-group">
                        <label asp-for="Description" class=" col-form-label text-md-left"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4 col-lg-4 col-sm-12  col-xl-4">
                    <div class="form-group">
                        <label asp-for="ForeignName" class=" col-form-label text-md-left"></label>
                        <input asp-for="ForeignName" class="form-control" />
                        <span asp-validation-for="ForeignName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4 col-lg-4 col-sm-12  col-xl-4">
                    <div class="form-group ">
                        <div class="CheckBox">
                            <label asp-for="InActive" class=" col-form-label text-md-left"></label>
                            <input asp-for="InActive" />
                            <span asp-validation-for="InActive" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <br>
            </div>
        </div>
        <partial name="_CardFooter">
    </div>
</form>